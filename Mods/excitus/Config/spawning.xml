    </append>
    <append xpath="/spawning/biome[@name='city' or @name='city_wasteland']">
        <spawn maxcount="2" respawndelay="4" time="Any" entitygroup="ZombiesTierGroup02" spawnDeadChance="0" />
    </append>
    <append xpath="/spawning/biome[@name='wasteland_hub' or @name='desert' or @name='wasteland']">
        <spawn maxcount="2" respawndelay="4" time="Any" entitygroup="ZombiesTierGroup03" spawnDeadChance="0" />
    </append>
</configs>